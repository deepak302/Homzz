<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/trend_imgv_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/bg" />

        <TextView
            android:id="@+id/sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trend_imgv_banner"
            android:layout_centerHorizontal="true" />

        <TableLayout
            android:id="@+id/trend_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sample_text"
            android:background="@drawable/bg_strip">

            <TableRow
                android:layout_weight="2">

                <TextView
                    android:id="@+id/trend_tv_builder_name"
                    style="@style/textview_trend_project_details"
                    android:text="Builder Name" />

                <TextView
                    android:id="@+id/trend_tv_sqft"
                    style="@style/textview_trend_project_details"
                    android:gravity="right"
                    android:text="3 BHK" />
            </TableRow>

            <TableRow android:layout_weight="2"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/trend_tv_location"
                    style="@style/textview_trend_project_details"
                    android:text="Gurgaon" />

                <TextView
                    android:id="@+id/trend_tv_price"
                    style="@style/textview_trend_project_details"
                    android:gravity="right"
                    android:text="30 Lacs" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</LinearLayout>