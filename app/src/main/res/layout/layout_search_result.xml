<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/trend_imgv_banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/bg" />

    <ImageButton
        android:id="@+id/trend_imgbtn_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@mipmap/heart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trend_imgv_banner"
        android:background="@color/white">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TableRow android:weightSum="2">

                <TextView
                    android:id="@+id/trend_tv_builder_name"
                    style="@style/textview_trend_text"
                    android:layout_weight="1"
                    android:text="Builder Name" />

                <TextView
                    android:id="@+id/trend_tv_price_sqft"
                    style="@style/textview_trend_text"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="5000 " />

            </TableRow>

            <TableRow android:weightSum="2">

                <TextView
                    android:id="@+id/trend_tv_location"
                    style="@style/textview_trend_text"
                    android:layout_weight="1"
                    android:text="Location" />

                <TextView
                    android:id="@+id/trend_tv_area"
                    style="@style/textview_trend_text"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="2,3,4 BHK" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>