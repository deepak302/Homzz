<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mentobile.homzz.SearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/search_btn_search"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- <EditText
                 android:id="@+id/search_ed_search"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:background="@drawable/edittext_design"
                 android:drawableLeft="@android:drawable/ic_menu_search"
                 android:hint="@string/search_city"
                 android:singleLine="true"
                 android:textColorHint="@color/counter_text_bg" />-->

            <AutoCompleteTextView
                android:id="@+id/Months"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_design"
                android:hint="@string/search_city"
                android:singleLine="true"
                android:textColorHint="@color/counter_text_bg"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/search_tv_propertytype"
                style="@style/textview_header"
                android:text="Property Type" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/search_imgv_apartment"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/search_imgv_plot"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/search_imgv_house"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/search_imgv_land"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/search_imgv_plot1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/search_imgv_house1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/search_imgv_land1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/ic_launcher" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/search_tv_badroom"
                style="@style/textview_header"
                android:text="Bedrooms" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_tv_bd_any"
                    style="@style/textview_simple_text"
                    android:text="Any" />

                <TextView
                    android:id="@+id/search_tv_bd1"
                    style="@style/textview_simple_text"
                    android:text="1" />

                <TextView
                    android:id="@+id/search_tv_bd2"
                    style="@style/textview_simple_text"
                    android:text="2" />

                <TextView
                    android:id="@+id/search_tv_bd3"
                    style="@style/textview_simple_text"
                    android:text="3" />

                <TextView
                    android:id="@+id/search_tv_bd4"
                    style="@style/textview_simple_text"
                    android:text="4" />

                <TextView
                    android:id="@+id/search_tv_bd4plus"
                    style="@style/textview_simple_text"
                    android:text="4+" />
            </LinearLayout>

            <TextView
                android:id="@+id/search_tv_price_range"
                style="@style/textview_header"
                android:text="Price Range" />

            <LinearLayout
                android:id="@+id/seekbar_testing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/search_tv_sqft"
                style="@style/textview_header"
                android:text="Sq Ft" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_tv_sqftAny"
                        style="@style/textview_simple_text"
                        android:text="Any" />

                    <TextView
                        android:id="@+id/search_tv_sqft500"
                        style="@style/textview_simple_text"
                        android:text="500+" />

                    <TextView
                        android:id="@+id/search_tv_sqft1K"
                        style="@style/textview_simple_text"
                        android:text="1K+" />

                    <TextView
                        android:id="@+id/search_tv_sqft2K"
                        style="@style/textview_simple_text"
                        android:text="2K+" />

                    <TextView
                        android:id="@+id/search_tv_sqft3K"
                        style="@style/textview_simple_text"
                        android:text="3K+" />

                    <TextView
                        android:id="@+id/search_tv_sqft4K"
                        style="@style/textview_simple_text"
                        android:text="4K+" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/search_tv_listed_by"
                style="@style/textview_header"
                android:text="Listed By" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_tv_list_owner"
                    style="@style/textview_simple_text"
                    android:text="Owner" />

                <TextView
                    android:id="@+id/search_tv_list_agent"
                    style="@style/textview_simple_text"
                    android:text="Agent" />

                <TextView
                    android:id="@+id/search_tv_list_builder"
                    style="@style/textview_simple_text"
                    android:text="Builder" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/search_btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/button_selector"
        android:text="Search"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
