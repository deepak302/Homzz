<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chip="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mentobile.homzz.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <com.plumillonforge.android.chipview.ChipView
            android:id="@+id/text_chip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/search_ed_any"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_city"
                android:textColorHint="@color/counter_text_bg"
                android:textSize="13sp" />

        </android.support.design.widget.TextInputLayout>

        <ListView
            android:id="@+id/search_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/brown" />

    </LinearLayout>

    <Button
        android:id="@+id/search_btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_selector"
        android:text="Done"
        android:textColor="@color/white" />

</RelativeLayout>
