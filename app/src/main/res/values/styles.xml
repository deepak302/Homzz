    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_style</item>
        <!--<item name="popupMenuStyle">@style/PopupMenu.Style</item>-->
        <item name="dropDownListViewStyle">@style/DropDownListView.Style</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Style</item>
        <!--<item name="actionDropDownStyle">@style/DropDownNav.Style</item>-->
        <item name="actionBarStyle">@style/ActionBar.Solid.Style</item>
        <item name="actionModeBackground">@color/background_floating_material_dark</item>
        <item name="actionModeSplitBackground">@color/background_floating_material_dark</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Style</item>

        // Light.DarkActionBar specific
        <item name="actionBarWidgetTheme">@style/Theme.Style.Widget</item>
        <item name="android:screenOrientation">portrait</item>

        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>

    </style>

    <style name="ActionBar.Solid.Style" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/background_floating_material_dark</item>
        <item name="backgroundStacked">@color/background_floating_material_dark</item>
        <item name="backgroundSplit">@color/background_floating_material_dark</item>
        <!--<item name="progressBarStyle">@style/ProgressBar.Style</item>-->
    </style>

    <!--<style name="ActionBar.Transparent.Style" parent="@style/Widget.AppCompat.ActionBar">-->
    <!--<item name="background">@drawable/ab_transparent_style</item>-->
    <!--<item name="progressBarStyle">@style/ProgressBar.Style</item>-->
    <!--</style>-->

    <!--<style name="PopupMenu.Style" parent="@style/Widget.AppCompat.PopupMenu">-->
    <!--<item name="android:popupBackground">@drawable/menu_dropdown_panel_style</item>-->
    <!--</style>-->

    <style name="DropDownListView.Style" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_style</item>
    </style>

    <style name="ActionBarTabStyle.Style" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_style</item>
    </style>

    <style name="DropDownNav.Style" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_style</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_style</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_style</item>
    </style>

    <!--<style name="ProgressBar.Style" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">-->
    <!--<item name="android:progressDrawable">@drawable/progress_horizontal_style</item>-->
    <!--</style>-->

    <style name="ActionButton.CloseMode.Style" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_style</item>
    </style>

    <!--//this style is only referenced in a Light.DarkActionBar based theme-->

    <style name="Theme.Style.Widget" parent="@style/Theme.AppCompat">
        <!--<item name="popupMenuStyle">@style/PopupMenu.Style</item>-->
        <item name="dropDownListViewStyle">@style/DropDownListView.Style</item>
    </style>


    <style name="textview_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff173952</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textview_simple_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/bg_button_login</item>
    </style>

    <style name="textview_trend_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/bg_button_login</item>
    </style>

    <style name="textview_project_detail_type_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/bg_button_login</item>
    </style>

    <style name="textview_project_detail_type_info_result">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SpinnerItem">

        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textview_trend_project_details">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
